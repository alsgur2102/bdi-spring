<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bdi.sp.DelMapper">
	<select id="selectDelList" resultType="com.bdi.sp.vo.Del">
		select num as id, d.* from del d
		<where>
			<if test="name!=null"> and name=#{name}</if>
			<if test="num!=null"> and num=#{num}</if>
			<if test="age!=null"> and age=#{age}</if>
		</where>
	</select>
	
	<select id="selectDel" resultType="com.bdi.sp.vo.Del">
		select * from del where num=#{num}
	</select>
	
	<insert id="insertDel">
		insert into del(name,age)
		values(#{name},#{age})
	</insert>
	
	<update id="updateDel">
		update del
		<set>
			<if test="name!=null">name=#{name},</if>
			<if test="age!=null">age=#{age},</if>
		</set>
		where num=#{num}
	</update>
	
	<delete id="deleteDel">
		delete from del
		where num=#{num}
	</delete>
</mapper>